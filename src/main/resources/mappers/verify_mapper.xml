<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.security_practice.mapper.VerifyMapper">
    <resultMap id="VerifyResultMap" type="com.korit.security_practice.entity.Verify">
        <id property="userId" column="user_id"/>
        <result property="verifyCode" column="verify_code"/>
    </resultMap>

    <select id="getVerifyByUserId" resultMap="VerifyResultMap">
        select
            *
        from
            verify_tb
        where
            user_id = #{userId};
    </select>

    <insert id="addVerify">
        insert into
            verify_tb
        values
            (#{userId}, #{verifyCode});
    </insert>

    <delete id="deleteVerifyByUserId">
        delete from
            verify_tb
        where
            user_id = #{userId};
    </delete>
</mapper>
